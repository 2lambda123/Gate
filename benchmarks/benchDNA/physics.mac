#======================================================
# PHYSICS 
#======================================================

/gate/physics/addPhysicsListMixed emstandard_opt3_mixed_emdna
#/gate/physics/addPhysicsListMixed emlivermore_mixed_emdna

/gate/physics/SetDNAInRegion Target
/gate/physics/SetDNAInRegion Target1
/gate/physics/SetDNAInRegion Target2

/gate/physics/ConstructProcessMixed

/gate/physics/Gamma/SetCutInRegion      world 1 um
/gate/physics/Electron/SetCutInRegion   world 1 um
/gate/physics/Positron/SetCutInRegion   world 1 um
/gate/physics/Proton/SetCutInRegion     world 1 um

/gate/physics/Gamma/SetCutInRegion      Target 1 nm
/gate/physics/Electron/SetCutInRegion   Target 1 nm
/gate/physics/Positron/SetCutInRegion   Target 1 nm
/gate/physics/Proton/SetCutInRegion     Target 1 nm

/gate/physics/Gamma/SetCutInRegion      Target1 1 nm
/gate/physics/Electron/SetCutInRegion   Target1 1 nm
/gate/physics/Positron/SetCutInRegion   Target1 1 nm
/gate/physics/Proton/SetCutInRegion     Target1 1 nm

/gate/physics/Gamma/SetCutInRegion      Target2 1 nm
/gate/physics/Electron/SetCutInRegion   Target2 1 nm
/gate/physics/Positron/SetCutInRegion   Target2 1 nm
/gate/physics/Proton/SetCutInRegion     Target2 1 nm

#======================================================
# ACTORS   
#======================================================

# To avoid very low energy electrons to be trapped into scattering
/gate/actor/addActor  KillActor  killETarget1
/gate/actor/killETarget1/attachTo Target1
/gate/actor/killETarget1/addFilter energyFilter
/gate/actor/killETarget1/energyFilter/setEmax 8 eV


/gate/actor/addActor  KillActor  killETarget2
/gate/actor/killETarget2/attachTo Target2
/gate/actor/killETarget2/addFilter energyFilter
/gate/actor/killETarget2/energyFilter/setEmax 8 eV


/gate/actor/addActor  KillActor  killETarget
/gate/actor/killETarget/attachTo Target
/gate/actor/killETarget/addFilter energyFilter
/gate/actor/killETarget/energyFilter/setEmax 8 eV

